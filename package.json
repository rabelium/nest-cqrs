{
  "name": "@rabelium/cqrs",
  "version": "0.0.1-alpha.1",
  "description": "A NestJS CQRS library",
  "author": "Racem Zouaghi <racem.zouaghi@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rabelium/nest-cqrs.git"
  },
  "keywords": [
    "nestjs",
    "cqrs",
    "command",
    "query",
    "event",
    "domain-driven-design",
    "ddd"
  ],
  "homepage": "https://github.com/rabelium/nest-cqrs",
  "bugs": {
    "url": "https://github.com/rabelium/nest-cqrs/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "build:watch": "tsc -p tsconfig.lib.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.lib.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.lib.json"
      }
    }
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "rxjs": "^7.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13 || ^0.2.0"
  },
  "optionalDependencies": {
    "amqplib": "^0.10.0",
    "ioredis": "^5.0.0",
    "kafkajs": "^2.0.0",
    "mqtt": "^5.0.0",
    "nats": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@nestjs/testing": "^10.0.0 || ^11.0.0",
    "@types/amqplib": "^0.10.7",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0 || ^7.0.0",
    "@typescript-eslint/parser": "^6.0.0 || ^7.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^3.0.0 || ^4.0.0 || ^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^4.5.0 || ^5.0.0"
  }
}
